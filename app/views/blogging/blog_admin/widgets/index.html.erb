<ol class="breadcrumb">
  <li>
    <%= link_to blog_admin_widgets_path do %>
       <i class="fa fa-th-large"></i>
    <%end%>
  </li>
  <li class="active"> Widget </li>
</ol>
<div class="col-lg-12">
  <% @widgets.each do |widget| %>
      <div class="col-lg-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <%= widget.name %>
            <div class="pull-right">
              <%= link_to edit_blog_admin_widget_path(widget) do %>
                  <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to blog_admin_widget_path(widget), :method => :delete, :data => {:confirm => 'Are you sure?'} do %>
                  <i class="fa fa-times"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>