<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-info">
      <div class="panel-heading"> New Post</div>
      <%= form_for @page, :url => (@page.new_record? ? blog_admin_pages_path : blog_admin_page_path(@page)) do |f| %>
          <div class="panel-body">
            <%= form_validation_message(@page) %>
            <div class="col-lg-12">
              <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, :class => 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :slug %>
                <%= f.text_field :slug, :class => 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :keyword %> <i> <small> (Comma separated page keywords) </small> </i>
                <%= f.text_field :keyword, :class => 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :menu %>
                <%= f.text_field :menu, :class => 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :content %>
                <%= f.text_area :content, :class => 'form-control', :style => 'min-height: 300px;' %>
              </div>
              <div class="form-group">
                <%= f.label :page_css %>
                <%= f.text_area :page_css, :class => 'form-control', :style => 'min-height: 150px;' %>
              </div>
            </div>
          </div>
          <div class="panel-footer">
            <%= f.submit :class => 'btn btn-default' %>
          </div>
      <% end %>
    </div>
  </div>
</div>

<script src="//tinymce.cachefly.net/4.2/tinymce.min.js"></script>
<script>tinymce.init({
    selector: "textarea",
    theme: "modern",
    plugins: [
        "advlist autolink link image lists charmap print preview hr anchor pagebreak spellchecker",
        "searchreplace wordcount visualblocks visualchars code fullscreen insertdatetime media nonbreaking",
        "save table contextmenu directionality emoticons template paste textcolor"
    ]
});
</script>