<div class="row">
  <div class="col-lg-12">
    <ol class="breadcrumb">
      <li><a href="#"><span class="glyphicon glyphicon-home"></span></a></li>
      <li class="active"> News Letter Subscribers </li>
    </ol>
    <table class="table news-letter-lists">
      <thead>
      <tr>
        <th> Id </th>
        <th> Email </th>
        <th> Subscribe At </th>
        <th> Action </th>
      </tr>
      </thead>
      <tbody>
      <% @news_letters.each do |subscribe| %>
          <%= render 'item', :subscribe => subscribe %>
      <%end%>
      </tbody>
    </table>
    <%= form_for Blogging::NewsLetter.new, :url => blog_admin_news_letters_path, :method => 'post', :data => {:remote => true} do |f| %>
        <%= f.text_field :email, :class => 'form-control', :placeholder => 'New News Letter' %>
        <div class="actions pull-right" style="margin-top: 10px;">
          <%= f.submit :class => 'btn btn-default' %>
        </div>
    <%end%>
  </div>
</div>