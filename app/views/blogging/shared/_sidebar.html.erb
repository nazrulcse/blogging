<div class="col-xs-12 col-md-12">
  <div class="sidebar blogging-sidebar boxed push-down-30" style="position: relative; width: 100%;">
    <div class="row">

      <div class="col-xs-10  col-xs-offset-1">
        <div class="widget-banner push-down-30">
          <h6>Banner</h6>
          <%= raw Blogging::BlogAdmin::Setting.top_banner_add %>
        </div>
        <!-- Widget categories -->
        <div class="widget-categories  push-down-30">
          <h6>Categories</h6>
          <ul>
            <% Blogging::Category.all.each do |category| %>
                <li>
                  <a href="<%= category_path(category.name.downcase) %>"><%= category.name %> &nbsp;
                    <span class="widget-categories__text"> (<%= category.blogs.count %>)</span>
                  </a>
                </li>
            <% end %>
          </ul>
        </div>

        <div class="widget-posts">
          <h6> Popular Posts </h6>
          <hr>
          <div id="recent-posts" class="tab-pane fade in feature-post">
            <% Blogging::Blog.popular.each do |post| %>
                <%= render 'blogging/blogs/popular_post', :post => post %>
            <% end %>
          </div>
        </div>

        <div class="widget-posts">
          <h6> Recent Posts </h6>
          <hr>
          <div id="recent-posts" class="tab-pane fade in feature-post">
            <% Blogging::Blog.recent.each do |post| %>
                <%= render 'blogging/blogs/popular_post', :post => post %>
            <% end %>
          </div>
        </div>

        <div class="tags  widget-tags">
          <h6>Tags</h6>
          <hr>
          <%= raw most_used_tags %>
        </div>

        <div class="social-icons  widget-social-icons  push-down-30">
          <h6>Social Icons</h6>
          <%= raw Blogging::BlogAdmin::Setting.social_page %>
        </div>

        <%= render 'blogging/shared/twitter_feed' %>
      </div>
    </div>
  </div>
</div>